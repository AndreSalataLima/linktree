<div class="contain">
  <h1 style="text-align:center;">Appearance</h1>
  <%= simple_form_for(current_user,
    url:registration_path(current_user),
    html: { method: :put },
    data: {turbo: false}) do |f| %>
    <div class='row'>
      <div class='col-6'>
        <div class='row mt-5'>
          <div class='col-6'>
            <%= image_tag(current_user.avatar, class:"avatar-image") if current_user.avatar.attached? %>
            <img src="assets/profile_pic.png" alt="profile picture" class="avatar-image">
          </div>
          <div class='col-6 mt-5'>
            <%= f.input :avatar, required:false, label: false%>
          </div>
        </div>

        <div class="row mt-5">
          <div class="col-6 no-padding-col">
            <%= f.input :full_name, placeholder:"Your full name...", label: false, class: "form-control", required: false %>
          </div>
          <div class="col-6 no-padding-col">
            <%= f.input :username, placeholder:"Your username...", label: false, class: "form-control", required:true %>
          </div>
        </div>

        <div class='col-4'>
          <%= f.submit "Update Avatar" %>
        </div>
      </div>
      <div class='col-6'>
      </div>
    </div>
  <% end %>
</div>
